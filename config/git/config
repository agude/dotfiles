[user]
    name = Alexander Gude
    email = alex.public.account@gmail.com

[color]
    branch = auto
    diff = auto
    interactive = auto

[color "status"]
    added = green
    changed = yellow bold
    untracked = red bold

[core]
    editor = nvim
    excludesfile = ~/.config/git/ignore

[merge]
    tool = meld
    # Only allow fast-forward merges
    ff = only

[push]
    default = simple
    followTags = true
    autoSetupRemote = true

[pull]
    rebase = true

[diff]
    renames = copies
    mnemonicprefix = true

[include]
    path = ~/.gitconfig_local

[alias]
    fpush = push --force-with-lease
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    prune = fetch --prune
    undo = reset --mixed HEAD~1
    prune-all = fetch --prune --all
    # Remove the branch on origin
    # From https://stackoverflow.com/questions/16740268/git-alias-to-delete-local-and-remote
    nuke = !sh -c 'git push origin :$1' -
    # From https://haacked.com/archive/2014/07/28/github-flow-aliases/
    default = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
    up = !git pull --rebase --prune $@ && git submodule update --init --recursive
    bclean = "!f() { DEFAULT=$(git default); git branch --merged ${1-$DEFAULT} | grep -v " ${1-$DEFAULT}$" | xargs git branch -d; }; f"
    bdone = "!f() { DEFAULT=$(git default); git checkout ${1-$DEFAULT} && git up && git bclean ${1-$DEFAULT}; }; f"
    secure-commit = "!f() { for arg in \"$@\"; do if [ \"$arg\" = \"-n\" ] || [ \"$arg\" = \"--no-verify\" ]; then echo \"‚ùå Security Violation: --no-verify is forbidden.\"; exit 1; fi; done; git commit \"$@\"; }; f"

[branch]
    autosetuprebase = always

[transfer]
    fsckobjects = true

[stash]
    showPatch = true

[rebase]
    autostash = true

[log]
    decorate = full

[commit]
    verbose = true

[init]
    defaultBranch = main
